.page-wrapper {
  min-height: 100vh;
  background: #f8f8f8;
  padding: 30rpx;
}

.login-form {
  margin-top: 100rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 40rpx 30rpx;
}

.form-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  text-align: center;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-group input {
  width: 100%;
  height: 88rpx;
  background: #f8f8f8;
  border-radius: 44rpx;
  padding: 0 40rpx;
  font-size: 28rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 60rpx;
}

.submit-btn:active {
  opacity: 0.8;
}

.account-login-container {
  min-height: 100vh;
  padding: 40rpx;
  background: #fff;
}

.login-header {
  text-align: center;
  margin: 60rpx 0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.login-form {
  margin-top: 60rpx;
}

.input-group {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

input {
  width: 100%;
  height: 88rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
}

.login-btn {
  margin-top: 60rpx;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #07c160;  /* 草绿色 */
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  opacity: 0.8;
}

.login-container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f8f8f8;
  padding: 40rpx;
  box-sizing: border-box;
}

.login-box {
  width: 100%;
  max-width: 600rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 60rpx;
}

.input-group {
  margin-bottom: 60rpx;
}

.input-item {
  width: 100%;
  height: 100rpx;
  background-color: #f5f5f5;
  border-radius: 50rpx;
  margin-bottom: 30rpx;
  padding: 0 40rpx;
  font-size: 32rpx;
  color: #333;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.input-item:last-child {
  margin-bottom: 0;
}

.input-item:focus {
  background-color: #ffffff;
  box-shadow: 0 0 0 2rpx #07c160;
}

.login-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #07c160, #0ab356);
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 500;
  border-radius: 50rpx;
  border: none;
  box-shadow: 0 8rpx 16rpx rgba(7, 193, 96, 0.2);
  transition: all 0.3s ease;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 8rpx rgba(7, 193, 96, 0.15);
} 