.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: #07c160;  /* 草绿色 */
  z-index: 999;
  height: calc(44px + env(safe-area-inset-top));
}

.nav-title {
  height: 44px;
  line-height: 44px;
  text-align: center;
  color: #ffffff;
  font-size: 28rpx;
  font-weight: bold;
}

/* 内容区域整体下移 */
.container {
  padding-top: calc(44px + env(safe-area-inset-top));  /* 为导航栏预留空间 */
}

/* 理疗师提示文案 */
.therapist-hint {
  padding: 30rpx;
  text-align: center;
  margin-top: 70rpx;
}

.hint-text {
  padding: 30rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.main-hint {
  font-size: 56rpx;  /* 原来的28rpx的2倍 */
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;  /* 两行文字之间的间距 */
}

.sub-hint {
  font-size: 32rpx;
  color: #666;
  font-weight: bold;
}

/* 理疗师列表容器 */
.therapist-section {
  padding: 20rpx 30rpx;
  background: #fff;
}

.therapist-list {
  display: flex;
  flex-direction: row;  /* 横向排列 */
  justify-content: space-around;  /* 平均分布 */
  align-items: center;
  width: 100%;
  overflow-x: auto;  /* 如果超出屏幕可以滚动 */
  white-space: nowrap;
}

/* 理疗师项目 */
.therapist-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.circle-box {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 200rpx;
  background: #f8f8f8;
  border-radius: 50%;
  margin-bottom: 20rpx;  /* 添加与文字的间距 */
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 头像容器 */
.avatar-container {
  width: 140rpx;
  height: 140rpx;
}

/* 头像图片 */
.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
}

/* 理疗师姓名 */
.name {
  font-size: 28rpx;
  color: #333;
  text-align: center;
  margin-top: 10rpx;  /* 与圆形保持一定距离 */
}

.therapist-title {
  display: block;
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 内容区域样式 */
.content {
  background: #fff;
  padding: 30rpx;
  min-height: 200rpx;
}

/* 去除滚动条 */
::-webkit-scrollbar {
  display: none;
}

.page-container {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}

/* 提示信息盒子 */
.hint-box {
  width: 100%;
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-top: 60rpx;     /* 添加上边距 */
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.hint-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  display: block;
}

/* 理疗师选择大盒子 */
.therapist-box {
  width: 100%;
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  color: #333;
  text-align: center;
  display: block;
  margin-bottom: 30rpx;
  font-weight: bold;
}

/* 理疗师列表大盒子 */
.therapist-list {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
}

/* 选中效果 */
.therapist-item:active {
  background: #f0f0f0;
  transform: scale(0.98);
} 