}

.appointment-status-tag.cancelled {
  background-color: #f5222d;
}

.appointment-status-tag.completed {
  background-color: #13c2c2;
}

.appointment-status-tag.paid {
  background-color: #388e3c;
}

.appointment-time {
  display: flex;
  flex-direction: column;
  margin-bottom: 16rpx;
  border-left: 4rpx solid #e8f5e9;
  padding-left: 16rpx;
}

.date {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.time {
  font-size: 24rpx;
  color: #8c8c8c;
}

.appointment-customer {
  display: flex;
  flex-direction: column;
  margin-bottom: 16rpx;
  border-left: 4rpx solid #e8f5e9;
  padding-left: 16rpx;
}

.customer-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.customer-phone {
  font-size: 24rpx;
  color: #8c8c8c;
}

/* Ê≤ªÁñóÂ∏à‰ø°ÊÅØ */
.therapist-info {
