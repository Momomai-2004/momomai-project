  justify-content: center;
}

.modal-content {
  width: 85%;
  background: #fff;
  border-radius: 12px;
  padding: 24px;
  box-sizing: border-box;
}

.modal-title {
  font-size: 18px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20px;
  color: #333;
}

.remaining-list {
  margin-bottom: 24px;
}

.remaining-item {
  display: flex;
  justify-content: space-between;
  padding: 12px 0;
  border-bottom: 1px solid #f0f0f0;
}

.remaining-item:last-child {
  border-bottom: none;
}

.item-name {
  font-size: 14px;
  color: #333;
  flex: 1;
  padding-right: 10px;
}

.item-count {
  font-size: 16px;
  color: #ff6b6b;
  font-weight: bold;
}

.close-btn {
  width: 100%;
  height: 44px;
  line-height: 44px;
  background: #4CAF50;
  color: #fff;
  border-radius: 22px;
  font-size: 16px;
  margin-top: 10px;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-btn:active {
  opacity: 0.9;
}
